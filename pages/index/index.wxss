/**index.wxss**/
swiper , swiper image{
  width:100%;
  height:400rpx;
}

/* 导航 */
.content{
  display: flex;
  justify-content:space-between;
}
.contents{
  width:33%;
  margin:20rpx 0;
  border-right:1px solid #e7e7e7;
}
.content , .text{
  padding-top:10rpx;
  font-size:30rpx;
  color:#3e3a39;
  text-align:center;
}
.contentImg{
  width:60rpx;
  height:60rpx;
  margin:0 auto;
}
.img{
  width:100%;
  height:100%;
}

/* 免费报价 */
.mianfei{
  width:100%;
  margin:60rpx 20rpx;
  height:300rpx;
  display:flex;
  color:#fff;
}
.left{
  box-sizing:border-box;
  width:40%;
  padding-left:20rpx;
  background:#464855;
  border-radius: 20rpx;
  position:relative;
  margin-right:30rpx;
}
.left .baoj{
  line-height:50rpx;
  margin-top:20rpx;
  font-size:35rpx;
}
.jiaz{
  font-size:30rpx;
  line-height:40rpx;
}
.left image{
  width:60%;
  height:60%;
  position:absolute;
  left:100rpx;
  top:140rpx;
}
.right{
  width:50%;
  display:flex;
  flex-direction:column;
}
.right .top_img{
  width:95rpx;
  height:185rpx;
  position:absolute;
  right:40rpx; 
  bottom:0;
}
.right .bottom_img{
  width:130rpx;
  height:104rpx;
  position:absolute;
  right:30rpx;
  top:15rpx;
}
.right_top{
  margin-bottom:10%;
}
.right_sub{
  width:100%;
  height:45%;
  background-color:#e1e1e1;
  color:#333333;
  border-radius:10rpx;
  padding-left:20rpx;
  box-sizing:border-box;
  position:relative;
}
.right_sub .make{
  font-size:30rpx;
  padding-top:15rpx;
  line-height:40rpx;
}
.right_sub .service{
  font-size:25rpx;
  line-height:45rpx;
}

/* hover效果 */
.hover{
  background-color:#ccc;
}
.dianji{
  width:50%;
  height:100rpx;
  margin:0 auto;
  text-align:center;
  line-height:100rpx;
  border-radius:10rpx;
}
